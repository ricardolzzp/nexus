<mvc:View
	controllerName="admin.controller.Users.Create"
	xmlns="sap.uxap"
	xmlns:f="sap.ui.layout.form"
	xmlns:m="sap.m"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:mvc="sap.ui.core.mvc">

    <m:Page
		id="AdminPageUser"
		showHeader="{device>/system/phone}"
		showNavButton="{device>/system/phone}"
		navButtonPress=".onNavButtonPress">

		<ObjectPageLayout id="AdminObjectPageLayoutUers">
			<headerTitle>
				<ObjectPageHeader
					id="AdminObjectPageHeaderTenant"
					objectTitle="{i18n>newUser}"
					objectSubtitle="{i18n>usersCreateSubtitle}">
					<actions>
						<ObjectPageHeaderActionButton
							id="UserButtonSave"
							text="{i18n>save}"
							hideText="false"
							press=".onSavePressed"
							type="Emphasized"/>
						<ObjectPageHeaderActionButton
							id="UserButtonCancel"
							text="{i18n>cancel}"
							press=".onPressBackButton"
							hideText="false"/>
					</actions>
				</ObjectPageHeader>
			</headerTitle>
			<headerContent>
				<m:MessageStrip
					id="UserMessageStrip"
					visible="{= ${message>/}.length > 0 }"
					text="{i18n>systemErrorCreateUser}"
					type="Error"
					showIcon="true">
				</m:MessageStrip>
			</headerContent>
			<sections/>
		</ObjectPageLayout>
		<m:footer>
			<m:OverflowToolbar id="OverflowToolbarUser">
            	<m:Button
					id="UserErrorButtonBadge"
					icon="sap-icon://error"
					text="{= ${message>/}.length }"
					visible="{= ${message>/}.length > 0 }"
					type="Emphasized"
					press="onMessagePopoverPress" />
            
				<m:ToolbarSpacer id="ToolbarSpacerUser"/>
			</m:OverflowToolbar>
		</m:footer>
	</m:Page>
</mvc:View>