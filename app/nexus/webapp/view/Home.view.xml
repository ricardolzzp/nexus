<mvc:View
	controllerName="nexus.controller.Home"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page showHeader="false">
		<landmarkInfo>
			<PageAccessibleLandmarkInfo
				rootRole="Region"
				rootLabel="{i18n>Home_rootLabel}"
				contentRole="Main"
				contentLabel="{i18n>Home_contentLabel}"/>
		</landmarkInfo>
		<l:BlockLayout
			id="BlockLayout"
			background="Default">
			<l:BlockLayoutRow>
				<l:BlockLayoutCell class="sapUiNoContentPadding">
					<Image
						src="{
							parts: [{path:'view>/isPhone'}, {path:'i18n>homeImage'}],
							formatter: '.formatter.srcImageValue'
						}"
						width="100%"
						height="100%"/>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeD">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://role"
							size="2.5rem"
							color="Default"/>
						<Title
							id="administrationTile"
							text="{i18n>administrationTitle}"
							level="H3"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>administrationContent}"
							class="sapUiTinyMarginBottom"/>
						<Link
							text="{i18n>accessLink}"
							tooltip="{i18n>accessAdministrationLink}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeB">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://add-product"
							size="2.5rem"
							color="Default"/>
						<Title
							id="productTile"
							text="{i18n>productTitle}"
							level="H3"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>productContent}"
							class="sapUiTinyMarginBottom"/>
						<Link
							text="{i18n>accessLink}"
							tooltip="{i18n>accessProductsLink}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeD">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://customer-financial-fact-sheet"
							size="2.5rem"
							color="Default"/>
						<Title
							text="{i18n>contractsTitle}"
							level="H3"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>contractsContent}"
							class="sapUiTinyMarginBottom"/>
						<Link
							text="{i18n>accessLink}"
							tooltip="{i18n>accessRevenueLink}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeB">
					<l:VerticalLayout>
						<core:Icon
							id="supplierIcon"
							src="sap-icon://supplier"
							size="2.5rem"
							color="Default"
							/>
						<Title
							text="{i18n>supplierTitle}"
							level="H3"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>supplierContent}"
							class="sapUiTinyMarginBottom"/>
						<Link
							text="{i18n>accessLink}"
							tooltip="{i18n>accessSuppliersLink}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
	</Page>
</mvc:View>